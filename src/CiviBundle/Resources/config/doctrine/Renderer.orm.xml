<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="CiviBundle\Entity\Renderer" table="renderer">
    <id name="renderer" type="string" column="renderer" length="63">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="title" type="string" column="title" length="255" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">A displayable title. (ex: Thunderlook 9.1 (Windows XP))</option>
      </options>
    </field>
    <field name="os" type="string" column="os" length="63" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment"> A symbolic name of a platform. (ex: linux, windows, darwin)</option>
      </options>
    </field>
    <field name="osVersion" type="string" column="os_version" length="63" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">The version of the platform.</option>
      </options>
    </field>
    <field name="app" type="string" column="app" length="63" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">A symbolic name of the email application (ex: thunderlook, gmail)</option>
      </options>
    </field>
    <field name="appVersion" type="string" column="app_version" length="63" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">The version of the email application.</option>
      </options>
    </field>
    <field name="icons" type="text" column="icons" length="65535" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">A JSON-encoded object.</option>
      </options>
    </field>
    <field name="options" type="text" column="options" length="65535" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">A JSON-encoded list of options supported by this renderer.</option>
      </options>
    </field>
    <field name="lastSeen" type="datetime" column="last_seen" nullable="false">
      <options>
        <option name="comment">The last time we last had communication with this renderer.</option>
        <option name="default">CURRENT_TIMESTAMP</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
