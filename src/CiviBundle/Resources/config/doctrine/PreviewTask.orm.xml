<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="CiviBundle\Entity\PreviewTask" table="preview_task">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="user" type="string" column="user" length="63" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">The user who owns this task.</option>
      </options>
    </field>
    <field name="batch" type="string" column="batch" length="63" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">The batch which produced this task. (FK: PreviewBatch.name)</option>
      </options>
    </field>
    <field name="renderer" type="string" column="renderer" length="63" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">The renderer for this batch.</option>
      </options>
    </field>
    <field name="options" type="text" column="options" length="65535" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">A JSON-encoded set of options to pass through to the renderer.</option>
      </options>
    </field>
    <field name="createTime" type="datetime" column="create_time" nullable="false">
      <options>
        <option name="comment">The time at which the PreviewTask was initially created.</option>
        <option name="default">CURRENT_TIMESTAMP</option>
      </options>
    </field>
    <field name="claimTime" type="datetime" column="claim_time" nullable="false">
      <options>
        <option name="comment">The time at which the PreviewTask was last claimed.</option>
        <option name="default">0000-00-00 00:00:00</option>
      </options>
    </field>
    <field name="finishTime" type="datetime" column="finish_time" nullable="false">
      <options>
        <option name="comment">The time at which the PreviewTask completed.</option>
        <option name="default">0000-00-00 00:00:00</option>
      </options>
    </field>
    <field name="attempts" type="integer" column="attempts" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">The number of times we have attempted to render this task.</option>
      </options>
    </field>
    <field name="errorMessage" type="text" column="error_message" length="65535" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
